[user]
	name = Alex L. Demidov
	email = alexeydemidov@gmail.com
[color]
	ui = auto
[alias]
    up = pull origin
    st = status
    di = diff
    co = checkout
    ci = commit -a
    br = branch
    sta = stash
	show-graph = log --graph --abbrev-commit --pretty=oneline
  full-history = log --graph --full-history --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset' --all
	ready = rebase -i @{u}
	unstage = reset HEAD --
[core]
	excludesfile = ~/.gitignore
	whitespace = cr-at-eol
[push]
	default = upstream
[pull]
	rebase = true
